---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import PostCard from "../components/PostCard.astro";
import ava3 from "../assets/ava3.jpg";

const posts = (await getCollection("blog"))
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, 3);
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body
        class="bg-slate-50 dark:bg-slate-950 text-slate-900 dark:text-slate-100 transition-colors duration-300"
    >
        <Header />
        <main>
            <!-- Hero Section -->
            <section
                class="relative bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800 overflow-hidden transition-colors duration-300"
            >
                <div
                    class="absolute inset-0 bg-grid-slate-100 dark:bg-grid-slate-800/20 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.6))] dark:[mask-image:linear-gradient(0deg,rgba(0,0,0,0),rgba(0,0,0,0.4))] -z-10"
                >
                </div>
                <div
                    class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-24 flex flex-col-reverse md:flex-row items-center gap-12"
                >
                    <div class="flex-1 text-left">
                        <h1
                            class="text-4xl font-extrabold tracking-tight text-slate-900 dark:text-white sm:text-5xl mb-4"
                        >
                            The Minimum Viable Dad
                        </h1>
                        <p
                            class="text-lg text-slate-600 dark:text-slate-400 mb-6"
                        >
                            Thuc Personal Blog
                        </p>
                        <p
                            class="text-lg text-slate-700 dark:text-slate-300 leading-relaxed max-w-2xl mb-8"
                        >
                            Hey hey, welcome to my personal blog! I'm so glad
                            you're here. My name is <strong>Thuc Nguyen</strong
                            >. I write about product and tech. I'm a proud dad
                            of two: Mira is 2 years young and Mino is a newborn.
                            Want to know me more? Check out my bio or my latest
                            blog posts below.
                        </p>
                        <div class="flex gap-4">
                            <a
                                href="/about"
                                class="rounded-full bg-violet-600 text-white px-8 py-3 font-semibold hover:bg-violet-700 transition-colors shadow-lg shadow-violet-600/20 inline-flex items-center gap-2"
                            >
                                Know more
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                    class="w-5 h-5"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </a>
                            <div class="flex items-center gap-4 px-4">
                                <!-- Social Icons -->
                                <a
                                    href="https://linkedin.com/in/thucldnguyen"
                                    target="_blank"
                                    class="text-slate-500 hover:text-violet-600 transition-colors"
                                >
                                    <span class="sr-only">LinkedIn</span>
                                    <svg
                                        class="h-6 w-6"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                        aria-hidden="true"
                                        ><path
                                            fill-rule="evenodd"
                                            d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                                            clip-rule="evenodd"></path></svg
                                    >
                                </a>
                                <a
                                    href="https://github.com/thucldnguyen"
                                    target="_blank"
                                    class="text-slate-500 hover:text-violet-600 transition-colors"
                                >
                                    <span class="sr-only">GitHub</span>
                                    <svg
                                        class="h-6 w-6"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                        aria-hidden="true"
                                        ><path
                                            fill-rule="evenodd"
                                            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                            clip-rule="evenodd"></path></svg
                                    >
                                </a>
                            </div>
                        </div>
                    </div>
                    <div
                        class="flex-1 flex justify-center md:justify-end text-center"
                    >
                        <div class="relative w-64 h-64 md:w-80 md:h-80">
                            <div
                                class="absolute inset-0 bg-violet-600 rounded-3xl rotate-6 opacity-20"
                            >
                            </div>
                            <Image
                                src={ava3}
                                alt="Thuc Nguyen"
                                width={320}
                                height={320}
                                class="relative w-full h-full object-cover rounded-3xl shadow-2xl rotate-3 hover:rotate-0 transition-transform duration-500"
                            />
                        </div>
                    </div>
                </div>
            </section>

            <!-- Featured Posts -->
            <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
                <h2
                    class="text-3xl font-bold text-slate-900 dark:text-white mb-10 text-center"
                >
                    Featured Writings
                </h2>
                <ul
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
                >
                    {
                        posts.map((post) => (
                            <li>
                                <PostCard post={post} />
                            </li>
                        ))
                    }
                </ul>
                <div class="mt-12 text-center">
                    <a
                        href="/blog"
                        class="text-violet-600 dark:text-violet-400 font-semibold hover:underline inline-flex items-center gap-1"
                    >
                        View all posts
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 20 20"
                            fill="currentColor"
                            class="w-5 h-5"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>
            </section>
        </main>
        <Footer />
    </body>
</html>
