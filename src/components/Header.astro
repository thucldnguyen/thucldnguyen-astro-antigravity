---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import ThemeIcon from "./ThemeIcon.astro";
import LiquidBackground from "./LiquidBackground.astro";
---

<header class="glass-header">
	<nav
		class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 h-20 flex items-center justify-between"
	>
		<h2 class="text-2xl font-bold tracking-tight">
			<a
				href="/"
				class="text-slate-900 dark:text-white hover:text-violet-600 dark:hover:text-violet-400 transition-colors flex items-center gap-2"
			>
				{SITE_TITLE}
			</a>
		</h2>
		<div class="hidden md:flex gap-8 text-sm font-medium">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/tags">Tags</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
		<div class="flex items-center gap-4">
			<a
				href="https://github.com/thucldnguyen"
				target="_blank"
				class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors text-slate-500 dark:text-slate-400"
			>
				<span class="sr-only">GitHub</span>
				<svg
					viewBox="0 0 16 16"
					aria-hidden="true"
					class="w-5 h-5"
					fill="currentColor"
				>
					<path
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path>
				</svg>
			</a>
			<ThemeIcon />
			<!-- Mobile Menu Button -->
			<button
				id="mobile-menu-btn"
				class="md:hidden p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors text-slate-500 dark:text-slate-400"
				aria-label="Toggle Menu"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="w-6 h-6"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
				</svg>
			</button>
		</div>
	</nav>
</header>

<!-- Mobile Menu Overlay - Moved outside header to escape containing block -->
<div
	id="mobile-menu"
	class="fixed inset-0 z-[100] bg-white/60 dark:bg-slate-900/60 backdrop-blur-3xl transition-all duration-500 opacity-0 pointer-events-none transform translate-y-4 md:hidden flex flex-col items-center justify-center overflow-hidden"
>
	<!-- Liquid decorations for the menu -->
	<div
		class="absolute top-1/4 left-1/4 w-64 h-64 bg-violet-500/20 rounded-full blur-3xl -z-10 animate-blob"
	>
	</div>
	<div
		class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-fuchsia-500/20 rounded-full blur-3xl -z-10 animate-blob animation-delay-2000"
	>
	</div>

	<nav
		class="flex flex-col items-center gap-8 text-2xl font-bold tracking-tight z-10"
	>
		<a
			href="/"
			class="mobile-link text-slate-800 dark:text-slate-100 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
			>Home</a
		>
		<a
			href="/blog"
			class="mobile-link text-slate-800 dark:text-slate-100 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
			>Blog</a
		>
		<a
			href="/tags"
			class="mobile-link text-slate-800 dark:text-slate-100 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
			>Tags</a
		>
		<a
			href="/about"
			class="mobile-link text-slate-800 dark:text-slate-100 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
			>About</a
		>
		<a
			href="/contact"
			class="mobile-link text-slate-800 dark:text-slate-100 hover:text-violet-600 dark:hover:text-violet-400 transition-colors"
			>Contact</a
		>
	</nav>

	<button
		id="close-menu-btn"
		class="absolute bottom-12 p-4 rounded-full bg-white/10 border border-white/20 text-slate-500 dark:text-slate-300 hover:bg-white/20 transition-all backdrop-blur-md z-10"
		aria-label="Close Menu"
	>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 24 24"
			stroke-width="1.5"
			stroke="currentColor"
			class="w-8 h-8"
		>
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				d="M6 18L18 6M6 6l12 12"></path>
		</svg>
	</button>
</div>

<script>
	function setupMobileMenu() {
		const mobileBtn = document.getElementById("mobile-menu-btn");
		const closeBtn = document.getElementById("close-menu-btn");
		const mobileMenu = document.getElementById("mobile-menu");
		const mobileLinks = document.querySelectorAll(".mobile-link");

		if (!mobileBtn || !closeBtn || !mobileMenu) return;

		function toggleMenu() {
			const isClosed = mobileMenu?.classList.contains("opacity-0");
			if (isClosed) {
				mobileMenu?.classList.remove(
					"opacity-0",
					"pointer-events-none",
					"-translate-y-4",
				);
				document.body.style.overflow = "hidden"; // Prevent scrolling
			} else {
				mobileMenu?.classList.add(
					"opacity-0",
					"pointer-events-none",
					"-translate-y-4",
				);
				document.body.style.overflow = "";
			}
		}

		mobileBtn.addEventListener("click", toggleMenu);
		closeBtn.addEventListener("click", toggleMenu);

		// Close menu when clicking a link
		mobileLinks.forEach((link) => {
			link.addEventListener("click", () => {
				mobileMenu?.classList.add(
					"opacity-0",
					"pointer-events-none",
					"-translate-y-4",
				);
				document.body.style.overflow = "";
			});
		});
	}

	// Initialize on page load
	setupMobileMenu();

	// Support View Transitions
	document.addEventListener("astro:after-swap", setupMobileMenu);
</script>
<LiquidBackground />
<style>
	/* Custom styles can still go here if needed, but Tailwind handles most */
</style>
