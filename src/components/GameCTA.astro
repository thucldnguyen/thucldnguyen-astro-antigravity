---
import { Image } from "astro:assets";
import geoGuruImg from "../assets/GeoGuru.png";
---

<div class="relative w-full rounded-2xl overflow-hidden shadow-2xl my-8 group">
    <!-- Background Content -->
    <div class="absolute inset-0">
        <Image
            src={geoGuruImg}
            alt="GeoGuru Game"
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            width={800}
        />
        <div
            class="absolute inset-0 bg-slate-900/60 transition-colors duration-300 group-hover:bg-slate-900/50"
        >
        </div>
    </div>

    <!-- Content -->
    <div
        class="relative z-10 flex flex-col items-center justify-center p-8 md:p-12 text-center text-white"
    >
        <h3 class="text-2xl md:text-3xl font-bold mb-6 drop-shadow-lg">
            Tired of reading blog posts? <br class="hidden md:block" /> Play a game
        </h3>

        <a
            href="/game"
            class="inline-block px-8 py-4 bg-gradient-to-r from-violet-600 to-fuchsia-600 text-white text-xl font-black rounded-2xl shadow-lg hover:-translate-y-1 hover:shadow-xl transition-all duration-300 no-underline"
        >
            ðŸŽ® Play GeoGuru Now
        </a>
    </div>
</div>
