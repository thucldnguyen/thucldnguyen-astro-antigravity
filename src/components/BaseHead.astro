---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";
import type { ImageMetadata } from "astro";
import { ClientRouter } from "astro:transitions";
import { SITE_TITLE } from "../consts";

import favicon from "../assets/favicon.png";
import newThumbnail from "../assets/new-thumbnail.png";

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata | string;
	preloadImage?: boolean;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
	title,
	description,
	image = newThumbnail,
	preloadImage = true,
} = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/png" href={favicon.src} />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL("rss.xml", Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Fonts: self-hosted via @fontsource in global.css (no external requests) -->

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Preload LCP image (hero/OG) so the browser fetches it earlier -->
{
	preloadImage && image && (
		<link
			rel="preload"
			as="image"
			href={
				typeof image === "string" ? image : (image as ImageMetadata).src
			}
		/>
	)
}

<ClientRouter />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<script is:inline>
	function applyTheme() {
		if (
			localStorage.getItem("color-theme") === "dark" ||
			!("color-theme" in localStorage)
		) {
			document.documentElement.classList.add("dark");
		} else {
			document.documentElement.classList.remove("dark");
		}
	}

	applyTheme();
	document.addEventListener("astro:after-swap", applyTheme);
</script>

<script is:inline>
	// Aggressively unregister all Service Workers and clear caches (legacy Gatsby cleanup)
	// Run this when the main thread is idle to avoid blocking LCP
	const cleanupLegacyWorkers = () => {
		if ("serviceWorker" in navigator) {
			navigator.serviceWorker
				.getRegistrations()
				.then((registrations) => {
					for (const registration of registrations) {
						registration
							.unregister()
							.then((success) => {
								if (success) {
									console.log(
										"Service Worker unregistered successfully",
									);
									window.location.reload();
								}
							})
							.catch((err) =>
								console.error(
									"Service Worker unregistration failed:",
									err,
								),
							);
					}
				})
				.catch((err) =>
					console.error(
						"Error getting Service Worker registrations:",
						err,
					),
				);
		}

		if ("caches" in window) {
			caches
				.keys()
				.then((names) => {
					for (const name of names) {
						caches
							.delete(name)
							.catch((err) =>
								console.error("Cache deletion failed:", err),
							);
						console.log("Cache cleared:", name);
					}
				})
				.catch((err) =>
					console.error("Error getting cache keys:", err),
				);
		}
	};

	if ("requestIdleCallback" in window) {
		requestIdleCallback(cleanupLegacyWorkers);
	} else {
		setTimeout(cleanupLegacyWorkers, 2000);
	}
</script>

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta
	property="og:image"
	content={new URL(
		(typeof image === "string" ? image : image?.src) || newThumbnail.src,
		Astro.site,
	)}
/>
<meta property="og:site_name" content={SITE_TITLE} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta
	property="twitter:image"
	content={new URL(
		(typeof image === "string" ? image : image?.src) || newThumbnail.src,
		Astro.site,
	)}
/>

<!-- Google Analytics: load after page load to avoid blocking LCP (3G / low-end) -->
<script is:inline>
	window.dataLayer = window.dataLayer || [];
	function gtag() {
		dataLayer.push(arguments);
	}
	function loadGA() {
		var s = document.createElement("script");
		s.async = true;
		s.src = "https://www.googletagmanager.com/gtag/js?id=G-WBEHL329W9";
		document.head.appendChild(s);
		gtag("js", new Date());
		gtag("config", "G-WBEHL329W9");
	}
	if (document.readyState === "complete") {
		loadGA();
	} else {
		window.addEventListener("load", loadGA);
	}
</script>
